<link rel="stylesheet" href="/css/personal_que.css">

<div class="qstn-container">

    <% if(locals.user){ %>
        
        <h2 style="margin: 7px;">Question Sent</h2>
    <div class="qstn-sent">
        <!-- Question Sent -->
        
        <% for(let i=0; i< specificPostSent.length; i++){ %>
            <div class="post">
    
                <div>
                    <textarea name="post-data" id="post-data" cols="55" rows="7" readonly style="resize: none; "><%= specificPostSent[i].post %> </textarea>
                </div>
            
                <div id="post-btn">
                    <div>
                        <!-- likes -->
                        <button id="like"><i class="fas fa-thumbs-up"></i></button>
                        <span id="no">100</span>
                    </div>
                    <div>
                        <!-- dislike -->
                        <button id="dislike"><i class="fas fa-thumbs-down"></i></button>
                        <span id="no">12</span>
                    </div>
                    <div>
                        <!-- go to  post -->
                        <a href="#" id="goto">Go to</a>
                    </div>
                </div>
                <div id="tag">
                    <ul>
                        <% for(let k=0; k<specificPostSent[i].interest.length; k++){ %>
                            <li id="tag-list">
                                <code> #<%= (specificPostSent[i].interest[k]) %> </code>
                                
                            </li>
                        <% } %> 
                    </ul>
                        
                </div>

                <div id="post-author">
                    <span>
                        <%= specificPostSent[i].user.first_name %> <%= specificPostSent[i].user.second_name %> 
                    </span>
                </div>
            
            </div>
        <% } %> 

    </div>

    <h2 style="margin: 7px;">Question Received</h2>
    <div class="qstn-recieved">
        <!-- Question Received -->
        <% for(let i=0; i< postRecieved.length; i++){ %>
            <div class="post">
    
                <div>
                    <textarea name="post-data" id="post-data" cols="55" rows="7" readonly style="resize: none; "><%= postRecieved[i].post %> </textarea>
                </div>
            
                <div id="post-btn">
                    <div>
                        <!-- likes -->
                        <button id="like"><i class="fas fa-thumbs-up"></i></button>
                        <span id="no">100</span>
                    </div>
                    <div>
                        <!-- dislike -->
                        <button id="dislike"><i class="fas fa-thumbs-down"></i></button>
                        <span id="no">12</span>
                    </div>
                    <div>
                        <!-- go to  post -->
                        <a href="#" id="goto">Go to</a>
                    </div>
                </div>
                <div id="tag">
                    <ul>
                        <% for(let k=0; k<postRecieved[i].interest.length; k++){ %>
                            <li id="tag-list">
                                <code> #<%= (postRecieved[i].interest[k]) %> </code>
                                
                            </li>
                        <% } %> 
                    </ul>
                        
                </div>

                <div id="post-author">
                    <span>
                        <%= postRecieved[i].user.first_name %> <%= postRecieved[i].user.second_name %> 
                    </span>
                </div>
            
            </div>
        <% } %> 
    </div>
        
    <% } %> 

</div>