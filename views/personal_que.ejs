                            <span id="no"><%= postRecieved[i].like.length %> </span>
                        <% }else{ %>
                            <button id="like"><a href="/control/like/<%= postRecieved[i]._id %>"><i class="fas fa-thumbs-up" style="color: grey;"></i></a></button>
                            <span id="no"><%= postRecieved[i].like.length %></span>
                        <% } %> 
                        
                    </div>
                    <div>
                        <!-- dislike -->
                        <% if(postRecieved[i].dislike.includes(loggedUser._id)){ %>
                            <button id="dislike"><a href="/control/dislike/<%= postRecieved[i]._id %>"><i class="fas fa-thumbs-down" style="color: rgb(114, 27, 27);"></i></a></button>
                            <span id="no"><%= postRecieved[i].dislike.length %></span>
                        <% }else{ %>
                            <button id="dislike"><a href="/control/dislike/<%= postRecieved[i]._id %>"><i class="fas fa-thumbs-down" style="color: gray;"></i></a></button>
                            <span id="no"><%= postRecieved[i].dislike.length %></span>
                        <% } %> 
                        
                    </div>
                    <div>
                        <!-- go to  post -->
                        <a href="/post/view/<%= postRecieved[i]._id %>" id="goto"><i class="fas fa-arrow-right" style="font-size: larger;"></i></a>
                    </div>
                </div>
                <div id="tag">
                    <ul>
                        <% for(let k=0; k<postRecieved[i].interest.length; k++){ %>
                            <li id="tag-list">
                                <code> #<%= (postRecieved[i].interest[k]) %> </code>
                                
                            </li>
                        <% } %> 
                    </ul>
                        
                </div>

                <div id="post-author">
                    <span>
                        <%= postRecieved[i].user.first_name %> <%= postRecieved[i].user.second_name %> 
                    </span>
                </div>
            
            </div>
        <% } %> 
    </div>
        
    <% } %> 

</div>