<link rel="stylesheet" href="/css/create_new.css">

<div class="card">
    
    <div class="heading"> <Strong>Create Account</Strong>  </div>

    <form action="/users/create" method="POST" class="form">

        <div class="email">
            <label for="email"> <strong>Email Id</strong> </label>
            <br>
            <input type="text" name="email" placeholder="Email Id" id="email" required>
        </div>

        <div class="password">
            <label for="password"><strong>Password</strong> </label>
            <br>
            <input type="password" name="password" placeholder="Password" id="password" required>
        </div>

        <div class="password">
            <label for="password"><strong>Confirm Password</strong> </label>
            <input type="password" name="confirmpassword" placeholder="Password" id="password" required>
        </div>
        
        <div class="create-button">
            <input type="submit" name="submit" id="submit" value="Create">
        </div>

    </form>

</div>