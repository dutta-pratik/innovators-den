<link rel="stylesheet" href="/css/view_post.css">

<div class="view-container">

    <div class="view-data">
        <!-- post Data -->
        <%= post.post %> 
    </div>

    <div class="view-ans-post">
        <!-- Answer Box -->
        <form action="/answer/add/<%= post._id %>" method="POST">
            <textarea name="ans" id="ans" cols="32" rows="6" style="resize: none;"></textarea>
            <br><br>
            <input type="submit" name="submit" id="submit" value="Post Answer">
        </form>
    </div>

    <div class="view-ans-list">
        <!-- List of Answer -->
        <% for(let i=0; i<post.ans.length; i++){ %>
            <div class="view-ans-list-card">
                <div class="view-ans-list-content">
                    <!-- Answer Content -->
                    <%= post.ans[i].ans %> 
                </div>
                <div class="view-ans-list-btn">
                    <!-- Like Dislike -->
                    <div>
                        <!-- likes -->
                        <button id="like"><i class="fas fa-thumbs-up"></i></button>
                        <span id="no">100</span>
                    </div>
                    <div>
                        <!-- dislike -->
                        <button id="dislike"><i class="fas fa-thumbs-down"></i></button>
                        <span id="no">12</span>
                    </div>
                </div>
            </div>
        <% } %> 
    </div>

</div>