<link rel="stylesheet" href="/css/view_post.css">

<div class="view-container">

    <div class="view-data">
        <!-- post Data -->
        <%= post.post %> 
    </div>

    <div class="view-ans-post">
        <!-- Answer Box -->
        <form action="/answer/add/<%= post._id %>" method="POST">
            <textarea name="ans" id="ans" cols="32" rows="6" style="resize: none;"></textarea>
            <br><br>
            <input type="submit" name="submit" id="submit" value="Post Answer">
        </form>
    </div>

    <div class="view-ans-list">
        <!-- List of Answer -->
        <% for(let i=0; i<post.ans.length; i++){ %>
            <div class="view-ans-list-card">
                <div class="view-ans-list-content">
                    <!-- Answer Content -->
                    <%= post.ans[i].ans %> 
                </div>
                <div class="view-ans-list-btn">
                    <!-- Like Dislike -->
                    <div>
                        <!-- likes -->
                        <% if(post.ans[i].like.includes(loggedUser._id)){ %>
                            <button id="like"><a href="/control/like/<%= post.ans[i]._id %>"><i class="fas fa-thumbs-up" style="color: rgb(114, 27, 27);"></i></a></button>
                            <span id="no"><%= post.ans[i].like.length %> </span>
                        <% }else{ %>
                            <button id="like"><a href="/control/like/<%= post.ans[i]._id %>"><i class="fas fa-thumbs-up" style="color: grey;"></i></a></button>
                            <span id="no"><%= post.ans[i].like.length %></span>
                        <% } %> 
                        
                    </div>
                    <div>
                        <!-- dislike -->
                        <% if(post.ans[i].dislike.includes(loggedUser._id)){ %>
                            <button id="dislike"><a href="/control/dislike/<%= post.ans[i]._id %>"><i class="fas fa-thumbs-down" style="color: rgb(114, 27, 27);"></i></a></button>
                            <span id="no"><%= post.ans[i].dislike.length %></span>
                        <% }else{ %>
                            <button id="dislike"><a href="/control/dislike/<%= post.ans[i]._id %>"><i class="fas fa-thumbs-down" style="color: gray;"></i></a></button>
                            <span id="no"><%= post.ans[i].dislike.length %></span>
                        <% } %> 
                        
                    </div>
                </div>
            </div>
        <% } %> 
    </div>

</div>